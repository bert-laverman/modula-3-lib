<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="rakisCo" transaction-type="JTA">
	    <provider>org.hibernate.ejb.HibernatePersistence</provider>
	    <jta-data-source>rakisCoDS</jta-data-source>

		<class>nl.rakis.co.backend.model.COAccessRight</class>
		<class>nl.rakis.co.backend.model.COClass</class>
		<class>nl.rakis.co.backend.model.CODomain</class>
		<class>nl.rakis.co.backend.model.CODomainClass</class>
		<class>nl.rakis.co.backend.model.COGroup</class>
		<class>nl.rakis.co.backend.model.COPerson</class>
		<class>nl.rakis.co.backend.model.COUser</class>
		<class>nl.rakis.co.backend.model.State</class>
		<class>nl.rakis.co.backend.model.StateModel</class>
		<class>nl.rakis.co.backend.model.StateTransition</class>

		<properties>
	        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
    	    <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://hogwarts/postgres"/>
			<property name="javax.persistence.jdbc.user" value="rakisco"/>
			<property name="javax.persistence.jdbc.password" value="rakisco"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
